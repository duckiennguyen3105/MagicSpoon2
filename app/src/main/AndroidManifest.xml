<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Sislab.MagicSpoon">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Tremor_Activities"></activity>
        <activity android:name=".Bluetooth_Activities" />
        <activity android:name=".ChangePass_Form" />
        <activity android:name=".ChangeDetail_Form" />
        <activity android:name=".Profile_Form" />
        <activity
            android:name=".Navigation_Menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Graph_Activity" />
        <activity android:name=".SignIn_Form" />
        <activity android:name=".Login_Form">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>